@page
@using EasyAbp.EzGet.Admin.Web.Pages
@using EasyAbp.EzGet.Admin.Web.Pages.EzGet.Credentials
@using EasyAbp.EzGet.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.AspNetCore.Mvc.UI.Layout

@model CreateModalModel

@inject IStringLocalizer<EzGetResource> L
@inject IPageLayout PageLayout

@{
    Layout = null;
}

<form method="post" asp-page="/EzGet/Credentials/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCredential"].Value"></abp-modal-header>
        <abp-modal-body>
            <div class="form-group">
                <label for="CredentialInfo_UserId">@L["UserId"]</label>
                <div class="input-group">
                    <input asp-for="CredentialInfo.UserId" type="text" class="form-control sreach-user-id" placeholder="@L["UserId"].Value">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary select-user" type="button">@L["SelectUser"]</button>
                    </div>
                </div>
            </div>
            <abp-input asp-for="CredentialInfo.GlobPattern" />
            <abp-input asp-for="CredentialInfo.Description" />
            <abp-select asp-for="CredentialInfo.ExpirationType" />
            <abp-input asp-for="CredentialInfo.Read" />
            <abp-input asp-for="CredentialInfo.Write" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
