@page
@using EasyAbp.EzGet.Admin.Web.Pages.EzGet.NuGet.Packages
@using EasyAbp.EzGet.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@model EditModalModel

@inject IStringLocalizer<EzGetResource> L

@{
    Layout = null;
}

<form method="post" asp-page="/EzGet/NuGet/Packages/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["EditNuGetPackage"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="NuGetPackageInfo.Id" />
            <abp-input asp-for="NuGetPackageInfo.ConcurrencyStamp" />
            <abp-input asp-for="NuGetPackageInfo.PackageName" />
            <abp-input asp-for="NuGetPackageInfo.NormalizedVersion" />
            <abp-input asp-for="NuGetPackageInfo.Listed" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
